function dockerstart()
{
  if docker-machine ls -q | grep default > /dev/null; then
    echo "Docker default already running"
  else
    docker-machine start > /dev/null
    docker-machine env > /dev/null
    eval $(docker-machine env default) > /dev/null
    echo "Docker started"
  fi
}

function iex()
{
  dockerstart && \
  docker run -it --rm \
  -v "$PWD":/usr/src/myapp \
  -w /usr/src/myapp \
  elixir
}

function elixirc()
{
  dockerstart && \
  docker run -it --rm \
  --name elixir-inst1 \
  -v "$PWD":/usr/src/myapp \
  -w /usr/src/myapp \
  elixir elixirc $1
}
